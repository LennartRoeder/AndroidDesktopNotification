{
    "manifest_version": 2,
    "name": "Desktop Notification",
    "description": "This extension displays Android Notifications inside the Chrome Browser on the desktop",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "http://thinking-aloud.no-ip.org/*",
        "https://thinking-aloud.no-ip.org/*",
        "notifications"
    ],
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    }
}
